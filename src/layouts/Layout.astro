---
interface Props {
  title?: string;
}

const { title = "Campfire SF" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/media/campfire.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content="Campfire SF - A 24 hour game jam in San Francisco. Feb 28 - Mar 1, 2026." />
    <meta name="google-site-verification" content="MyhuCBZf2Ot8oN6NACDUtDZFTrJu05WOtN2k9ES_LQU" />
  </head>
  <body>
    <slot />
    <footer>
      <div class="footer-content">
        <p class="footer-help">
          Need Help? <a href="mailto:san-francisco@campfire.hackclub.com">san-francisco@campfire.hackclub.com</a>
        </p>
        <div class="footer-links">
          <a href="https://hackclub.com" target="_blank" rel="noopener noreferrer">Hack Club</a>
          <span class="footer-divider">â€¢</span>
          <a href="https://github.com/sadeshmukh/campfire-sf" target="_blank" rel="noopener noreferrer">Source</a>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  footer {
    background-color: var(--starfuel);
    color: var(--cream);
    padding: 2rem 1.5rem;
  }

  .footer-content {
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    text-align: center;
  }

  .footer-help {
    font-family: "Dreamplanner", sans-serif;
    font-size: 1.1rem;
    margin: 0;
  }

  .footer-help a {
    color: var(--orangesicle);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .footer-help a:hover {
    opacity: 0.8;
  }

  .footer-links {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: "Dreamplanner", sans-serif;
    font-size: 1rem;
  }

  .footer-links a {
    color: var(--cream);
    opacity: 0.8;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .footer-links a:hover {
    opacity: 1;
  }

  .footer-divider {
    opacity: 0.4;
  }

  @media (min-width: 600px) {
    .footer-content {
      flex-direction: row;
      justify-content: space-between;
    }

    .footer-help {
      font-size: 1.2rem;
    }
  }

  @font-face {
    font-family: "Dreamplanner";
    src: url("/fonts/dreamplanner.otf") format("opentype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  :root {
    --fishbowl: #53bfff;
    --orangesicle: #df8c34;
    --starfuel: #384fbc;
    --emerald: #52cb77;
    --smores: #ad684f;
    --icecream: #9be8fe;
    --tortoise: #57ecd6;
    --white: #ffffff;
    --black: #000000;
    --cream: #fcf5ed;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: auto;
  }

  html.lenis,
  html.lenis body {
    height: auto;
  }

  .lenis.lenis-smooth {
    scroll-behavior: auto !important;
  }

  .lenis.lenis-smooth [data-lenis-prevent] {
    overscroll-behavior: contain;
  }

  .lenis.lenis-stopped {
    overflow: hidden;
  }

  .lenis.lenis-scrolling iframe {
    pointer-events: none;
  }

  body {
    font-family: "Dreamplanner", system-ui, sans-serif;
    background-color: var(--fishbowl);
    color: var(--cream);
    overflow-x: hidden;
    min-height: 100vh;
  }

  img,
  svg {
    max-width: 100%;
    height: auto;
    display: block;
  }

  a {
    color: inherit;
    text-decoration: none;
  }
</style>
