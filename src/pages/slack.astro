---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Join our Slack">
  <main>
    <section class="slack-page">
      <a href="/" class="back-link">&larr;</a>

      <div class="content-wrapper">
        <h1 class="page-title">Join the Hack Club Slack</h1>
        <p class="subtitle">Stay tuned for updates!</p>

        <div class="signup-box">
          <form id="slack-form" class="email-form">
            <input type="email" id="email" name="email" placeholder="your@email.com" required class="email-input" />
            <button type="submit" class="slack-btn">Get Your Invite</button>
          </form>
          <div id="status-message" class="status-message"></div>
        </div>

        <div class="steps">
          <div class="step">
            <span class="step-number">1</span>
            <span class="step-text">Enter your email above</span>
          </div>
          <div class="step">
            <span class="step-number">2</span>
            <span class="step-text">Complete Hack Club signup</span>
          </div>
          <div class="step">
            <span class="step-number">3</span>
            <span class="step-text">You're in! Check #campfire-sf for announcements & updates.</span>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  const form = document.getElementById("slack-form") as HTMLFormElement;
  const statusMessage = document.getElementById("status-message") as HTMLDivElement;
  const submitBtn = form.querySelector(".slack-btn") as HTMLButtonElement;

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    const emailInput = document.getElementById("email") as HTMLInputElement;
    const email = emailInput.value.trim();

    if (!email) return;

    submitBtn.disabled = true;
    submitBtn.textContent = "Sending...";
    statusMessage.className = "status-message";
    statusMessage.textContent = "";

    try {
      const response = await fetch("https://cfsf-bot.halceon.dev/join", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          email: email,
          password: "intentionallypublic",
        }),
      });

      if (response.ok) {
        statusMessage.textContent = "You're on the list! Redirecting to signup...";
        statusMessage.classList.add("success");
        setTimeout(() => {
          window.open("https://auth.hackclub.com/slack", "_blank");
        }, 1000);
      } else {
        throw new Error("Request failed");
      }
    } catch (error) {
      statusMessage.textContent = "Something went wrong. Please try again.";
      statusMessage.classList.add("error");
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = "Get Your Invite";
    }
  });
</script>

<style>
  .back-link {
    position: absolute;
    top: 2rem;
    left: 2rem;
    color: var(--cream);
    text-decoration: none;
    font-size: 1.5rem;
    font-family: sans-serif;
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    transition:
      background 0.2s ease,
      transform 0.2s ease;
  }

  .back-link:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateX(-3px);
  }

  .slack-page {
    position: relative;
    padding: 6rem 2rem;
    background: var(--starfuel);
    color: var(--cream);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .content-wrapper {
    max-width: 500px;
    width: 100%;
    text-align: center;
  }

  .page-title {
    font-family: "Dreamplanner", sans-serif;
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--icecream);
    font-size: 1.1rem;
    margin-bottom: 2.5rem;
    opacity: 0.9;
  }

  .signup-box {
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 16px;
    padding: 2rem;
    margin-bottom: 2.5rem;
  }

  .email-form {
    display: flex;
    gap: 0.75rem;
  }

  .email-input {
    flex: 1;
    padding: 1rem 1.25rem;
    font-size: 1rem;
    font-family: system-ui, sans-serif;
    border: 2px solid transparent;
    border-radius: 10px;
    background: var(--cream);
    color: var(--starfuel);
    outline: none;
    transition: border-color 0.2s ease;
  }

  .email-input::placeholder {
    color: #999;
  }

  .email-input:focus {
    border-color: var(--orangesicle);
  }

  .slack-btn {
    padding: 1rem 1.5rem;
    background-color: var(--orangesicle);
    color: var(--cream);
    font-family: "Dreamplanner", sans-serif;
    font-size: 1rem;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    white-space: nowrap;
    box-shadow: 0 4px 0 var(--smores);
    transition:
      transform 0.15s ease,
      box-shadow 0.15s ease;
  }

  .slack-btn:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 6px 0 var(--smores);
  }

  .slack-btn:active:not(:disabled) {
    transform: translateY(2px);
    box-shadow: 0 2px 0 var(--smores);
  }

  .slack-btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .status-message {
    margin-top: 1rem;
    font-size: 0.95rem;
    min-height: 1.5rem;
  }

  .status-message:empty {
    display: none;
  }

  .status-message.success {
    color: var(--emerald);
  }

  .status-message.error {
    color: var(--orangesicle);
  }

  .steps {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    text-align: left;
  }

  .step {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .step-number {
    width: 2rem;
    height: 2rem;
    background: var(--fishbowl);
    color: var(--starfuel);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.9rem;
    flex-shrink: 0;
  }

  .step-text {
    font-size: 1rem;
    opacity: 0.9;
  }

  @media (max-width: 500px) {
    .email-form {
      flex-direction: column;
    }

    .slack-btn {
      width: 100%;
    }

    .slack-page {
      padding: 5rem 1.5rem 3rem;
    }
  }
</style>
