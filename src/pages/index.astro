---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Info from "../components/info.astro";
import Faq from "../components/faq.astro";
import Sponsors from "../components/Sponsors.astro";
import Team from "../components/Team.astro";
---

<Layout title="Campfire SF">
  <Hero />
  <Info />
  <Faq />
  <Sponsors />
  <Team />
</Layout>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  const cloudWhite = document.querySelector(".cloud-white");
  const cloudOrange = document.querySelector(".cloud-orange");

  if (cloudWhite && cloudOrange) {
    gsap.to(cloudWhite, {
      x: "-40vw",
      y: "-10vh",
      ease: "none",
      scrollTrigger: {
        trigger: ".hero",
        start: "top top",
        end: "bottom top",
        scrub: true,
      },
    });

    gsap.to(cloudOrange, {
      x: "40vw",
      y: "-15vh",
      ease: "none",
      scrollTrigger: {
        trigger: ".hero",
        start: "top top",
        end: "bottom top",
        scrub: true,
      },
    });
  }
</script>
