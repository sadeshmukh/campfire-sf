---
import sponsorsData from "../data/sponsors.json";

interface Sponsor {
  name: string;
  logo: string;
  url: string;
}

const sponsors: Sponsor[] = sponsorsData;
---

<section class="sponsors" id="sponsors">
  <h2 class="section-title">Sponsors</h2>
  <div class="sponsors-grid">
    {
      sponsors.map((sponsor) => (
        <a href={sponsor.url} class="sponsor-card" target="_blank" rel="noopener">
          <img src={sponsor.logo} alt={sponsor.name} class="sponsor-logo" />
        </a>
      ))
    }
  </div>
</section>

<style>
  .sponsors {
    position: relative;
    z-index: 5;
    padding: 4rem 1.5rem;
    padding-bottom: 120px;
    background: url("/backgrounds/underwater-gradient.webp") center top / cover no-repeat;
    background-color: var(--starfuel);
    min-height: auto;
  }

  .section-title {
    font-family: "Dreamplanner", sans-serif;
    font-size: clamp(1.8rem, 5vw, 3rem);
    color: var(--cream);
    text-align: center;
    margin-bottom: 2rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
  }

  .sponsors-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .sponsor-card {
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.25);
    border-radius: 16px;
    padding: 1.25rem 1.5rem;
    transition:
      transform 0.2s ease,
      background 0.2s ease;
    backdrop-filter: blur(4px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .sponsor-card:hover {
    transform: translateY(-4px);
    background: rgba(255, 255, 255, 0.35);
  }

  .sponsor-logo {
    height: 50px;
    width: auto;
    filter: brightness(0) invert(1);
    opacity: 1;
  }

  @media (min-width: 600px) {
    .sponsors {
      padding: 5rem 2rem;
      padding-bottom: 150px;
    }

    .section-title {
      margin-bottom: 3rem;
    }

    .sponsors-grid {
      gap: 2rem;
    }

    .sponsor-card {
      padding: 1.5rem 2rem;
    }

    .sponsor-logo {
      height: 60px;
    }
  }
</style>
